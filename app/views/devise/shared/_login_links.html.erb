<div class="block">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "has-text-black" %><br />
  <% end %>
</div>

<div class="buttons">
  <%= link_to "Sign up", new_registration_path(resource_name), class: "button is-black" %></p>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with Facebook", omniauth_authorize_path(resource_name, provider), method: :post, class: "button is-link" %><br />
  <% end %>
</div>