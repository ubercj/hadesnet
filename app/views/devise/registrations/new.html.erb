<section class="section has-background-grey-dark has-text-white-ter">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h2 class="title has-text-centered has-text-danger-light">Sign up</h2>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="field">
            <div class="content">
              <%= f.input :name,
                          required: true,
                          autofocus: true,
                          input_html: { class: "input"},
                          wrapper: false %>
            </div>
          </div>
          <div class="field">
            <div class="content">
              <%= f.input :email,
                          required: true,
                          input_html: { autocomplete: "email", class: "input" },
                          wrapper: false %>
            </div>
          </div>
          <div class="field">
            <div class="content">
              <%= f.input :password,
                          required: true,
                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                          input_html: { autocomplete: "new-password", class: "input" },
                          wrapper: false %>
            </div>
          </div>
          <div class="field">
            <div class="content">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password", class: "input" },
                          wrapper: false %>
            </div>
          </div>

          <div class="field">
            <div class="content">
              <%= f.button :submit, "Sign up", class: "button is-medium is-danger" %>
            </div>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
